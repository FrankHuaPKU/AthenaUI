# AthenaUI 用户配置示例文件
# 复制此文件并修改为 current.user 以启用您的个人配置

# Athena++路径配置
ATHENA_PATH=/public1/home/sc51248/hyy/Athena++/athena      # Athena++绝对路径
ATHENAUI_PATH=/public1/home/sc51248/hyy/Athena++/AthenaUI    # AthenaUI绝对路径

# 计算平台设置
SLURM_FLAG=ON                              # ON=使用Slurm，OFF=本地运行
USERNAME=hyy                             # 用户名/作业名称

# 环境模块加载命令
# 根据您的计算平台修改这些命令
MPI_LOAD="module load mpich/4.1.2-ib"
HDF5_LOAD="module load hdf5/1.10.4-parallel-icc18"
PYTHON_LOAD="module load python/3.7.6"

# 配置代理（北超代理，可用于访问GitHub）
export http_proxy=http://172.16.21.209:8888
export https_proxy=http://172.16.21.209:8888
export ftp_proxy=http://172.16.21.209:8888
export HTTPS_PROXY=http://172.16.21.209:8888
export HTTP_PROXY=http://172.16.21.209:8888
